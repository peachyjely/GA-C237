    .navbar-logo {
        height: 100px; 
        margin-right: 10px;
    }
    
    .navbar-toggler {
        position: absolute;
        top: 0;
        right: 0; /* Add this line to move the toggler to the right */
        margin: 10px; /* Add some margin to make it look better */
        background-color: #d3d3d3;
    }
    
    h1 {
        color: #333;
        margin-top: 20px;
